        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading) {
   if (isLoading || newValue == '') {
      return;
   }
  
   //Type appropriate comment here, and begin script below
   var ga = new GlideAjax('AIDeviceDetails');
   ga.addParam('sysparm_name', 'getDeviceDetails');
   ga.addParam('sysparm_devicename', g_form.getValue('ai_device'));
   ga.getXML(setTotalAmount);


  function setTotalAmount(response){
     var answer = response.responseXML.documentElement.getAttribute("answer");
     var obj = JSON.parse(answer);
     var devicePrice =  obj.price;
     g_form.setValue('total_amount', newValue*devicePrice);
     
  }
}]]></script>
